name: Build Windows EXE

on:
  push:
    branches: [ main ]      # 如果你的分支叫 master 就改成 master
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest
    steps:
      - name: Checkout source
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install -U pip
          if (Test-Path call_repeat/requirements.txt) {
            pip install -r call_repeat/requirements.txt
          } else {
            pip install pyinstaller pandas openpyxl
          }

      - name: Build EXE with PyInstaller
        working-directory: call_repeat
        run: |
          pyinstaller --name "重复来电分类工具" ^
            --onefile ^
            --windowed ^
            --clean ^
            --collect-all openpyxl ^
            --collect-submodules pandas ^
            repeat_final.py

      - name: Upload built EXE
        uses: actions/upload-artifact@v4
        with:
          name: windows-exe
          path: call_repeat/dist/*
          if-no-files-found: error
